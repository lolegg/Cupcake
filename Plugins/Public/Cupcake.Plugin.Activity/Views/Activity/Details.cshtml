@model Cupcake.Plugin.Activity.Models.ActivitysModel
@using Cupcake.Web
@using Cupcake.Plugin.Activity.Helper
@using Cupcake.Core.Domain

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @using (Ajax.BeginForm(new AjaxOptions { }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.ActityType, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @DataDictionaryHelper.GetDictionaryName(Model.ActityType)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.ActityState, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @DataDictionaryHelper.GetDictionaryName(Model.ActityState)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.Title, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @Model.Title
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.ReleaseDate, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @CommonHelper.ToYYYYMMDD(Model.ReleaseDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.BeginDate, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @CommonHelper.ToYYYYMMDD(Model.BeginDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.EndDate, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @CommonHelper.ToYYYYMMDD(Model.EndDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-xs-6">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.Tel, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @Model.Tel
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Tel)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.LabelFor(model => model.Address, new { @class = "input-group-addon" })
                                    <div class="form-control">
                                        @Model.Address
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Address)
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix" id="imglit">
                        @{
                                    if (Model.Imgurl != null)
                                    {
                                        string[] imge = Model.Imgurl.Split(',');
                                        foreach (var it in imge)
                                        {
                                            if (it != "")
                                            {
                                                <div class="img_pailie"><img src="@it" style="width:100px; height:100px;margin-left:10px;"></div>
                                            }
                                        }
                                    }
                        }
                 </div>
                <div class="row" style="margin-top: 20px;">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.Conent, new { @class = "input-group-addon" })
                                <div style=" width: 500px; border: solid 1px #ccc; padding: 7px;">
                                    @Html.Raw(Model.Conent)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
<style>
    .clearfix:after {
        content: '';
        display: block;
        height: 0;
        clear: both;
    }

    .clearfix {
        zoom: 1;
    }

    .clear {
        clear: both;
    }

    .img_pailie {
        position: relative;
        float: left;
    }

        .img_pailie a {
            position: absolute;
            top: -14px;
            right: -7px;
        }
</style>
