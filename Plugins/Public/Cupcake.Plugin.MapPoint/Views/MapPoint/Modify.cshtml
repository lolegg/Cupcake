@model Reloadsoft.OuYangDangJianTouch.Admin.Models.MapInformationModel
@using Reloadsoft.OuYangDangJianTouch.Admin
@using Reloadsoft.OuYangDangJianTouch.Model


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Ajax.BeginForm(new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.name, new { @class = "input-group-addon" })
                                @Html.EditorFor(m => m.name)
                            </div>
                            @Html.ValidationMessageFor(m => m.name)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        @Html.Partial("~/Views/Section/UploadFileImgUrl.cshtml", new ViewDataDictionary { { "imgid", "ImageUrl" }, { "ImgUrl", Model.ImageUrl } })
                    </div>
                </div>
            }
        </div>
    </div>
</div>