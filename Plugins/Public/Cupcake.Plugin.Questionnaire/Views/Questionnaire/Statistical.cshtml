<style>
    th, .cou {
    text-align:center;
    }
</style>
    <table class="table table-striped table-bordered table-hover tablefixed" border="0">
        <thead>
            <tr>
                <th width="30%">
                    问卷调查名称
                </th>
                <th width="30%">
                    问题
                </th>
                <th width="30%">
                    答案
                </th>
                <th width="10%">
                    获得票数
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.List != null)
            {
                foreach (var item in Model.List)
                {
                    <tr>
                        <td >
                            @item.QuestionSurveyName
                        </td>
                        <td  >
                            @item.QuestionInfoName
                        </td>
                        <td >
                            @item.QuestionResultName
                        </td>
                        <td class="cou">
                           @(item.Count == 0 ? "" : item.Count)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
