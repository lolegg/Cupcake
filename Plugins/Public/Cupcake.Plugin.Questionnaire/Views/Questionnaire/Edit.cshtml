@model Cupcake.Plugin.Questionnaire.Models.QuestionnaireModel
@using Cupcake.Web
@using Cupcake.Web.Models
@using Cupcake.Web.Helper
@using Cupcake.Web.Framework
@using Cupcake.Core.Domain
@using Cupcake.Plugin.Questionnaire

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Ajax.BeginForm(new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="input-group">
                                <label class="input-group-addon" for="Title">问卷调查名称</label>
                                @Html.Editor("Title", "String4Bootstrap")
                            </div>
                            @Html.ValidationMessageFor(m => m.Title)
                        </div>
                    </div>
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <div class="input-group">
                                <label class="input-group-addon" for="NewsType">描述</label>
                                @Html.TextAreaFor(model => model.Desc, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Desc)
                        </div>
                    </div>

                </div>

            }
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('.fa-save').parent().prop('style', 'display:')
    });
</script>

