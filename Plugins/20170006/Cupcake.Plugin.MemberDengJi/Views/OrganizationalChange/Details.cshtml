@model Cupcake.Plugin.MemberDengJi.Models.OrganizationalChangeModel
@using Cupcake.Web
@using Cupcake.Plugin.MemberDengJi.Helper
@using Cupcake.Core.Domain
@using Cupcake.Web.Framework

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Ajax.BeginForm(new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.UserName, new { @class = "input-group-addon" })
                                <div class="form-control">
                                    @Model.UserName
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.Tel, new { @class = "input-group-addon" })
                                <div class="form-control">
                                    @Model.Tel
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.MailBox, new { @class = "input-group-addon" })
                                <div class="form-control">
                                    @Model.MailBox
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.OrganizationalIntroduce, new { @class = "input-group-addon" })
                                <div class="form-control" style="height:200px">
                                    @Model.OrganizationalIntroduce
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

