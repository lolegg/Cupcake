@model Cupcake.Plugin.NetInteraction.Models.OnlineCommentsOpinionModel
@using Cupcake.Web
@using Cupcake.Web.Models
@using Cupcake.Web.Helper
@using Cupcake.Web.Framework
@using Cupcake.Core.Domain
@using Cupcake.Plugin.NetInteraction
@using Cupcake.Plugin.NetInteraction.Helper
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Ajax.BeginForm(new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">


                            <div class="input-group">
                                <label class="input-group-addon" for="Title">问题</label>

                                @Html.TextAreaFor(model => model.Question, 10, 50, new { @class = "form-control" })
                            </div>

                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">


                            <div class="input-group">
                                <label class="input-group-addon" for="Title">姓名</label>
                                @Html.TextBoxFor(m => m.Name, new { @readonly = "true", @class = "form-control" })

                            </div>

                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">


                            <div class="input-group">
                                <label class="input-group-addon" for="Title">电话</label>
                                @Html.TextBoxFor(m => m.Phone, new { @readonly = "true", @class = "form-control" })

                            </div>

                        </div>
                    </div>


                </div>





                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">


                            <div class="input-group">
                                <label class="input-group-addon" for="Title">地点</label>
                                @Html.TextBoxFor(m => m.Address, new { @readonly = "true", @class = "form-control" })

                            </div>

                        </div>
                    </div>


                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">


                            <div class="input-group">
                                <label class="input-group-addon" for="Title">答复</label>

                                @Html.TextAreaFor(model => model.Ask, 10, 50, new { @class = "form-control" })
                            </div>

                        </div>
                    </div>


                </div>

            }
        </div>
    </div>
</div>



