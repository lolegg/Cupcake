@model Cupcake.Plugin.NetInteraction.Models.OnlineInterviewModel
@using Cupcake.Web
@using Cupcake.Web.Models
@using Cupcake.Web.Helper
@using Cupcake.Web.Framework
@using Cupcake.Core.Domain
@using Cupcake.Plugin.NetInteraction
@using Cupcake.Plugin.NetInteraction.Helper
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Ajax.BeginForm(new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
              
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            

                            <div class="input-group">
                                <label class="input-group-addon" for="Title">主题</label>
                                @Html.TextBoxFor(m => m.theme, new { @readonly = "true", @class = "form-control" })
                   
                            </div>

                        </div>
                    </div>
                    

                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            

                            <div class="input-group">
                                <label class="input-group-addon" for="Title">嘉宾</label>
                                @Html.TextBoxFor(m => m.Guest, new { @readonly = "true", @class = "form-control" })
                   
                            </div>

                        </div>
                    </div>
                    

                </div>
                
                
                
                
                
                <div class="row">
                <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label class="input-group-addon" for="Title">时间</label>
                                    <div class="form-control">
                                        @CommonHelper.ToYYYYMMDD(Model.shijian)
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            

                            <div class="input-group">
                                <label class="input-group-addon" for="Title">地点</label>
                                @Html.TextBoxFor(m => m.Address, new { @readonly = "true", @class = "form-control" })
                   
                            </div>

                        </div>
                    </div>
                    

                </div>
                <div class="row">
               
                    <div class="col-md-12">
                <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.IsEnabled, new { @class = "input-group-addon" })
                                <div class="form-control">
                                    <label class="checkbox-inline no-padding-left">
                                        @Html.RadioButtonFor(m => m.IsEnabled, false, new { disabled = "true" })
                                        <span class="padding-left-20">否</span>
                                    </label>
                                    <label class="checkbox-inline no-padding-left">
                                        @Html.RadioButtonFor(m => m.IsEnabled, true, new { disabled = "true" })
                                        <span class="padding-left-20">是</span>
                                    </label>
                               
                                </div>
                            </div>
                        </div>
                </div>
                       </div>
            }
        </div>
    </div>
</div>



