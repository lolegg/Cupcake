
@model Cupcake.Web.WapTemplate.Models.ActivityStyleModel
@using Cupcake.Web.WapTemplate.Helper
@using Cupcake.Web.WapTemplate.edmx;
@*<script src="~/Scripts/Note.js"></script>*@
<style>
    .active_mien h1 {
        font-size: 20px;
        font-weight: bold;
    }
    .active_mien h1 {
        margin-top: 40px;
        padding-bottom: 8px;
        border-bottom: solid 1px #ccc;
        margin-bottom: 15px;
        font-weight: 400;
        text-align: center;
    }
    .fen_ge_line {
        margin: 30px 0;
        height: 12px;
        background: -webkit-linear-gradient( left,#c487fc, #87e2fc);
    }
    .font18 {
        font-size: 18px;
    }
    .Input_Box > textarea {
        width: 100%;
        height: 122px;
        border-image-source: initial;
        border-image-slice: initial;
        border-image-width: initial;
        border-image-outset: initial;
        border-image-repeat: initial;
        resize: none;
        padding: 5px;
        outline: none;
        border-width: 0px;
        border-style: solid;
        border-color: rgb(255, 255, 255);
        font: 13px 微软雅黑, Arial, Helvetica, sans-serif;
        border-radius: 5px;
    }
    .Input_Box {
        width: 1138px;
        height: 161px;
        border: 1px solid #ccc;
    }
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .faceDiv {
        height: 130px;
        border-top: 1px solid #ccc;
        position: absolute;
        background-color: #fff;
    }
    .Input_Foot {
        width: 1138px;
        height: 40px;
        border-top: 1px solid #ccc;
        border-radius: 0 0 5px 5px;
        position: absolute;
    }
    .postBtn {
        float: right;
        font: 13px "微软雅黑", Arial, Helvetica, sans-serif;
        padding: 9px 20px 7px 20px;
        border-left: 1px solid #ccc;
        cursor: pointer;
        -moz-border-radius: 0 0 5px 0;
        border-radius: 0 0 5px 0;
        height: 40px;
        background: #379BE9;
        color: #fff;
    }
    .fl {
        float: left;
    }
    .fr {
        float: right;
    }
    .np_red span {
        display: block;
        margin: 30px 0 5px;
    }
</style>
<div class="active_mien">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m=>m.Title)
    <h1>@Model.Title</h1>
    <div class="font14" style="text-align:right">
        @CommonHelper.ToYYYYMMDD(Model.DeliveryTime)
    </div>
    <div class="font16 content">
        @Html.Raw(Model.Content)
    </div>
</div>
<div class="fen_ge_line"></div>
<div class="leave_a_message">
    @{ Html.RenderAction("PartialPlIndex", "Comments", new { id = Model.Id,Title=Model.Title }); }
</div>




