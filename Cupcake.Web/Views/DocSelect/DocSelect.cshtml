    @*样式重写*@
    <style type="text/css">
        .container {
            margin-top: 10px;
            padding-left: 15px;
            padding-right: 15px;
            /*width: 800px;*/
        }

        .chk_4 + label:after {
            content: '单选';
            position: absolute;
            top: 8px;
            font-size: 0.2em;
            color: white;
            font-weight: bold;
            left: 26px;
            padding: 0px;
            top: 4px;
            border-radius: 0px;
        }

        .chk_4:checked + label:after {
            content: '多选';
            left: 10px;
        }



        .chk_x:checked + label:after {
            content: '图文';
        }

        .chk_x + label:after {
            content: '列表';
        }


        .chk_4 + label:before {
            content: ' ';
            position: absolute;
            background: #FFF;
            top: 1px;
            z-index: 99999;
            left: 2px;
            width: 23px;
            color: #FFF;
            height: 20px;
            border-radius: 0px;
        }

        .chk_4 + label {
            width: 70px;
            padding: 11px 0px;
            margin-right: 8px;
            margin-bottom: 0px;
            border-radius:0px;
            margin-top: 2px;
            background: #9ED0D0;
        }

        .chk_4:checked + label:before {
            content: ' ';
            position: absolute;
            z-index: 99999;
            left: 45px;
        }

        .panel-heading {
            padding: 3px 15px;
        }

        .table {
            margin-bottom: 2px;
        }

        .panel {
            margin-bottom: 2px;
        }

        .panel-body {
            padding: 2px;
        }

        .alert {
            padding: 2px;
        }

        .alert-success {
            color: #3c763d;
            background-color: #E9ECEB;
            border-color: #E9ECEB;
            margin-bottom: 2px;
        }

        .pagination {
            margin: 0px;
            margin-top: 1px;
        }

        .col-sm-6 {
            height:30px;
        }
        .form-control {
            height:28px;
        }

        .btn-think {
            height:28px;
            padding:0px;
            padding-top:2px;
            width:90%;
            border-radius:0px;
        }

        .panel-body {
            height:32px;
        }

        .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
            padding: 0px;
            line-height: 1.42857143;
            vertical-align: top;
            border-top: none;
        }
    </style>

    <script src="~/Scripts/mediaselect.js"></script>

    @*声明处理请求的Control*@
    <script type="text/javascript">
        window.onload = function () {
            MediaSelect.InitPage("DocSelect");
        }
    </script>


    @*上传操作*@
    <script type="text/javascript">

        function Upload() {
            
            
            var typeid = $("#selMediaType").children('option:selected').val();
            if (typeid == "") {
                layer.alert("需要在右侧下拉框选择目录");
                return;
            }
            var setting = {
                filetype: '*.doc;*.docx;*.xls;*.txt',
                filelimit: 10,
                filesizelimit: '2048kb',
                folder: '',

                type: typeid,
                mediaclass: '@((int)MediaClass.文档)'
            };

            
            MediaSelect.UploadFile(setting);
        }

        function Refresh(type)
        {
            MediaSelect.LoadPicData();
        }

        function CloseLayer() {
            layer.closeAll();
        }

    </script>

