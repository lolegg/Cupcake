@model Cupcake.Web.Models.BasePermissionListModel
@using Cupcake.Web

<style type="text/css">
    .form-control {
        border-radius: 0px;
    
    }
    .form-group {
        margin-bottom: 2px;
    }
    .input-group-addon {
        border-radius:0px;
    }
</style>

<div class="row">

    <div class="col-sm-12">
        <div class="form-group">
            <div class="input-group">
                
                <input type="text" id="name" value="@Model.condition.Name" maxlength="120" class="form-control" placeholder="请输入名称" />
                <input type="text" id="desc" value="@Model.condition.Desc" maxlength="120" class="form-control" placeholder="请输入描述" />
                
                <span class="input-group-addon glyphicon glyphicon-search" onclick="Search();" style="cursor: pointer; background: #9BCCCC; ">
                    
                </span>
            </div>
           
        </div>
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                名称
            </th>
            <th>
                描述
            </th>
            <th>
                创建时间
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr style="height:18px;">
                <td width="10%"><input data-id="@item.Id" data-value="@item.Name" type="checkbox" /></td>
                <td width="40%" style="overflow:hidden">@item.Name</td>
                <td width="35%" style="overflow:hidden">@item.Desc</td>
                <td width="15%">@item.UpdateDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }

    </tbody>
</table>

<script type="text/javascript">

    $(function () {
        var pager = {
            PageIndex: '@Model.Paging.PageIndex',
            PageSize: '@Model.Paging.PageSize',
            Total: '@Model.Paging.Total'
        };
        LoadPaged(pager);
    });

    function Search() {
        var name = $("#name").val();
        var desc = $("#desc").val();
        var params = "&name=" + name + "&desc=" + desc;
        LoadData("", params);
    }

</script>