@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/js/zTree_v3/css/metro.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.0.min.js"></script>
    <script src="~/Content/js/zTree_v3/js/jquery.ztree.all-3.5.min.js"></script>
    <script src="~/Content/js/zTree_v3/js/jquery.ztree.exedit.js"></script>
    <script src="~/Content/js/pagination/jquery.pagination.js" type="text/javascript" charset="utf-8"></script>
    <link href="~/Content/css/bootstrap-3.3.6.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-3.3.6.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/reload.js" type="text/javascript"></script>
    <link href="~/Content/js/pagination/pagination.css" rel="stylesheet" />

    <style type="text/css">
        .panel-title {
            margin-right: 2px;
        }

        .col-xs-1, .col-sm-1, .col-md-1, .col-lg-1, .col-xs-2, .col-sm-2, .col-md-2, .col-lg-2, .col-xs-3, .col-sm-3, .col-md-3, .col-lg-3, .col-xs-4, .col-sm-4, .col-md-4, .col-lg-4, .col-xs-5, .col-sm-5, .col-md-5, .col-lg-5, .col-xs-6, .col-sm-6, .col-md-6, .col-lg-6, .col-xs-7, .col-sm-7, .col-md-7, .col-lg-7, .col-xs-8, .col-sm-8, .col-md-8, .col-lg-8, .col-xs-9, .col-sm-9, .col-md-9, .col-lg-9, .col-xs-10, .col-sm-10, .col-md-10, .col-lg-10, .col-xs-11, .col-sm-11, .col-md-11, .col-lg-11, .col-xs-12, .col-sm-12, .col-md-12, .col-lg-12 {
            padding-right: 5px;
            padding-left: 5px;
        }

        .ztree input {
            min-height: 16px;
            padding: 0px;
            margin: 0px;
        }

        .ztree li span {
            line-height: 12px;
            margin-right: 2px;
            margin-top: 0px;
            padding-top: 0px;
        }

        .ztree li a.curSelectedNode {
            background-color: #A0C0A4;
        }

        .col-sm-12 > .form-group {
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .panel {
            margin-bottom: 0px;
        }

        .page-body {
            padding-bottom: 0px;
            padding-top: 10px;
        }

        .pagination {
            
            margin:0px 5px;
        }
    </style>
    <script src="~/Scripts/jquery.ztree.js"></script>
    <script type="text/javascript">

        $(function () {

            var request = GetRequest();
            if (request["c"]) {
                controller = request["c"];
            }
            else {
                alert("参数错误");
                return;
            }
            $.BaseSimpleTree({ 'controller': controller });
        });

    </script>

</head>
<body>
    <div class="container-fluid" style="padding-top:5px;">
        <div class="row" style="margin-right: -10px;margin-left: -10px;">
            <input type="hidden" id="hidParams" value="" />

            <div class="col-sm-4" id="divLeft">
                <div class="panel panel-default" style="width:100%">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <span id="TreeName">列表</span> 
                            <span class="panel-title   btn-group-xs navbar-right">
                                <button type="button" style="display:none" id="btnAddRoot" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-new-window" title="添加根节点"></span>
                                </button>
                                <button type="button" style="display:none" id="btnExpandAll" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-chevron-down" title="展开"></span>
                                </button>
                                <button type="button" style="display:none" id="btnCloseAll" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-chevron-up" title="折叠"></span>
                                </button>
                                <button type="button" style="display:none" id="btnShowSearch" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-search" title="搜索"></span>
                                </button>
                            </span>
                        </h3>
                    </div>
                    <div class="panel-body" style="height:444px;overflow-y: auto;padding:0px">
                        <div class="input-group" style="margin-top: 5px; margin-left: 10px; margin-right: 10px; display: none" id="divSearch">
                            <input type="text" class="form-control input-group-sm" placeholder="请输入节点名称" id="inputKey">
                            <span class="input-group-btn">
                                <button class="btn btn-default" id="btnSearch" type="button">
                                    <span class="glyphicon glyphicon-search" title=""></span>
                                </button>
                            </span>
                        </div>

                        <ul id="tree" class="ztree" style="width:100%; height:100% "></ul>

                    </div>
                </div>
            </div>
            <div class="col-sm-8" id="divRight">
                <div class="panel panel-default" style="width:100%">

                    <div class="panel-heading">
                        <h3 class="panel-title" id="menetitle">
                            &nbsp;
                        </h3>
                    </div>

                    <div id="divData">

                    </div>

                    <div class="panel-footer" style="padding: 2px;">
                        <div class="panel-title" style="margin-right: 2px;margin-top:2px;">
                            <div class="row">
                                <div class="col-lg-12 text-right" id="page">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>



            </div>
        </div>
    </div>
</body>
</html>
