@model Cupcake.Web.Models.BasePermissionModel
@using Cupcake.Web
@using Cupcake.Core.Domain
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="well with-header">
            <div class="header bordered-info">
                权限属性
            </div>
            @using (Ajax.BeginForm("Create", new AjaxOptions()))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="input-group">
                        @Html.LabelFor(model => model.Name, new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.LabelFor(model => model.Desc, new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.Desc)
                        @Html.ValidationMessageFor(model => model.Desc)
                    </div>
                </div>
                <div class="form-group" style="text-align:center">
                    <button type="submit" class="btn btn-blue">保存</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

