@model Cupcake.Web.Models.UserModel
@using Cupcake.Web
@using Cupcake.Core.Domain
@{
    Layout = "~/Views/Shared/_Form.cshtml";
}

@section head
{

}

<div class="row">
    <div class="col-sm-12">
        <div class="well with-header">
            <div class="header bordered-info">
                用户信息
            </div>
            <div class="form-group">
                <div class="input-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "input-group-addon" })
                    @Html.EditorFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    @Html.LabelFor(model => model.Name, new { @class = "input-group-addon" })
                    @Html.EditorFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    @Html.LabelFor(model => model.Status, new { @class = "input-group-addon" })
                    @Html.EditorFor(m => m.StatusDesc)
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    @Html.LabelFor(model => model.UserType, new { @class = "input-group-addon" })
                    <select class="form-control" id="UserType" name="UserType">
                        @foreach (var item in EnumExtensions.GetSelectList(typeof(UserType), Model.UserType.ToString(), "0"))
                        {
                            if (item.Selected)
                            {
                                @:
                                <option value="@item.Value" selected="selected">@item.Text</option>
                            }
                            else
                            {
                                @:
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>

                </div>
            </div>

                <ul id="roleTab" class="nav nav-tabs">
                    @if(ViewBag.userRole!=null){
                    for (int i = 1; i <= ViewBag.userRole.Count; i++) {
                        if (i == 1)
                        {
                            <li class="active"><a href="#Role_@i" data-toggle="tab">角色_@i</a></li>
                        }
                        else { 
                         <li><a href="#Role_@i" data-toggle="tab">角色_@i</a></li>
                        }
                   }
                   }



                    @*<li role="presentation"><a href="#Role2" data-toggle="tab">角色2</a></li>
                    <li role="presentation"><a href="#Role3" data-toggle="tab">角色3</a></li>*@
                </ul>

            <div id="roleTabContent" class="tab-content">
               
                @{int ii = 1;}

                @foreach (var item in ViewBag.userRole)
                {
                    if (ii == 1)
                    {
                        <div class="tab-pane fade in active" id="Role_@ii">
                            <p>名称：@item.Name</p>
                        </div>
                        ii++;
                    }
                    else
                    {
                        <div class="tab-pane fade" id="Role_@ii">
                            <p>名称:@item.Name</p>
                        </div>
                        ii++;
                    }
                }

                @*@foreach (var item in ViewBag.userRole)
    {



            <div class="tab-pane fade in active" id="Role+@item.Count">
                <p>名称：@item.Name</p>
            </div>
            <div class="tab-pane fade" id="Role+@item.Count">
                <p>@item.Name</p>
            </div>
            <div class="tab-pane fade" id="Role2">
                <p>@item.Name</p>
            </div>
    }*@
            </div>
            


        </div>
    </div>
</div>