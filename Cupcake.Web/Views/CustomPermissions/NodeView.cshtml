<script type="text/javascript">

    //关闭
    function Close() {
        layer.closeAll();
        Search();
    }

    //分页
    $(function () {
        var pager = {
            PageIndex: '@Model.Paging.PageIndex',
            PageSize: '@Model.Paging.PageSize',
            Total: '@Model.Paging.Total'
        };
        $.BaseSimpleTree("LoadPaged", pager);
    });

    //查询
    function Search() {
        var params = "&name=" + $("#Name").val();
        $.BaseSimpleTree("LoadData", params);
    }
</script>

